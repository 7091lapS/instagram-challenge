<section class="top-bar-section">
  <div class='fixed'>
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><a class='title-link' href="/">#nofilter</a></h1>
        </li>
      </ul>
      <ul class="right">
        <% if user_signed_in? %>
          <li class="active">
            <a href="#">
              <%=link_to 'Sign out', destroy_user_session_path, method: :delete %>
